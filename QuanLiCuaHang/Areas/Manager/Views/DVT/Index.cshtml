            padding: 0px 0px;
            margin: 0px 290px;
        }
    </style>

    <h1 id="nhapphieu">ĐƠN VỊ TÍNH</h1>
    <br />
    <div class="container-fluid">
        <div col="mb-4">
            @*<div class="alert alert-success" id="success-alert">
                    <a href="#" class="close" data-hide="alert" aria-label="close">&times;</a>
                    Đã thêm mới loại sản phẩm thành công.
                </div>*@
            @*<div class="alert alert-danger" id="danger-alert">
                    <a href="#" class="close" data-hide="alert" aria-label="close">&times;</a>
                </div>*@
            <div class="card mb-4">
                <div class="card-header"><b>THÊM MỚI ĐƠN VỊ TÍNH</b></div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {@Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form action="/action_page.php" class="needs-validation" novalidate>

                        <div class="form-row">
                            <div class="form-group col-sm-3" hidden>

                                @Html.HiddenFor(model => model.LastOrDefault().MaDVT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LastOrDefault().MaDVT, "", new { @class = "text-danger" })
                                <div class="invalid-feedback">Vui lòng nhập đầy đủ thông tin về mã đơn vị tính</div>



                            </div>
                            <div class="form-group col-sm-3">
                                <label>Tên đơn vị tính</label>

                                @Html.EditorFor(model => model.LastOrDefault().TenDVT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LastOrDefault().TenDVT, "", new { @class = "text-danger" })
                                <br />
                                <br />
                                <input type="submit" id="addToTable" class="btn btn-primary" value="Thêm" />
                            </div>

                        </div>


                    </form>
                }
                </div>
            </div>
        </div>






        <div class="card mb-4">
            <div class="card-header"><b>DANH MỤC CÁC ĐƠN VỊ TÍNH</b></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-none" id="datatable-editable" width="100" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã đơn vị tính</th>
                                <th>Tên đơn vị tính</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaDVT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDVT)
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</main>

