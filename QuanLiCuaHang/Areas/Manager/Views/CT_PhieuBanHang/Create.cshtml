                html += "<td> <input type='button' value='Xóa' name='Xoa' class='btn btn-danger' onclick='RemoveItem(this)'/> </tr>";
                html += "</tr>";
                document.getElementById("#tblDSSanPham").insertRow().innerHTML = html;
                document.getElementById("#")
                CalTotal();
