@model QuanLiCuaHang.Areas.Manager.Data.LOAISANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        
                    $("#addToTable").click(function (event) {

                        var error_free = true;


                        if ($(".input-validation-error").length != 0) {
                            error_free = false;
                        }


                        if (!error_free) {
                            event.preventDefault();
                            swal({
                                title: "Lỗi !",
                                text: "Cập nhật thất bại!",
                                icon: "error",
                                button: "Đồng ý!",
                            });
                        }
                        else {
                            swal({
                                title: "Thành công !",
                                text: "Cập nhật thành công!",
                                icon: "success",
                                button: "Đồng ý!",
                            });
                        }

                    });

    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <style>
        #nhapphieu {
            text-align: center;
            color: purple;
            font-size: 35px;
            font-weight: bold;
            /*border: 1px solid #ddd;
            background-color: forestgreen;*/
            padding: 0px 0px;
            margin: 0px 290px;
        }
    </style>

    @* End CSS *@

    <h1 id="nhapphieu">SỬA LOẠI SẢN PHẨM</h1>
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaLoaiSP)

    <div class="form-group">
        @Html.LabelFor(model => model.TenLoaiSP, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="padding-top:10px">

            @Html.DisplayFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.PhanTramLoiNhuan, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PhanTramLoiNhuan, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.PhanTramLoiNhuan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaDVT, "Tên đơn vị tính", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="padding-top: 10px">
            @Html.HiddenFor(model => model.MaDVT)
            @Html.DisplayFor(model => model.DONVITINH.TenDVT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaDVT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="addToTable" type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
