<main>
    <div class="card mb-4">

        <div class="card-header"><b>TIÊU CHÍ TRA CỨU</b></div>
        <div class="card-body">
            <form action="/action_page.php" class="needs-validation" novalidate>
                <div class="form-row">

                    <div class="form-group col-sm-3">
                        <label>Số phiếu</label>

                        <input type="number" class="form-control" id="so_phieu" required>
                    </div>

                    <div class="form-group col-sm-3">
                        <label>Ngày lập</label>

                        <input type="text" class="form-control" id="ngay_lap" required>
                    </div>

                    <div class="form-group col-sm-3">
                        <label>Khách hàng</label>

                        <input type="text" class="form-control" id="khach_hang" required>
                    </div>

                    <div class="form-group col-sm-3">
                        <label>Tổng tiền</label>

                        <input type="number" class="form-control" id="tong_tien" required>
                    </div>

                </div>

            </form>
        </div>

    </div>

    <div class="card mb-4">

        <div class="card-header"><b>DANH SÁCH HÓA ĐƠN</b></div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered table-striped mb-none" id="tra_cuu_ban_hang" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Số phiếu</th>
                            <th>Ngày lập</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaPBH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayLap)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenKH)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.TongTien)
                            </td>
                            <td class="actions" style="text-align:center">
                                <a href="@Url.Action("Details","CT_PhieuBanHang", new { id = item.MaPBH })">
                                    <i type="button" class="fa fa-search-plus fa-2x"> </i>
                                </a>
                            </td>
                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>

