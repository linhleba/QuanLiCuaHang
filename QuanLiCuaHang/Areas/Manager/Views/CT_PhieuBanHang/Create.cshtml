<script type="text/javascript">
    // Hàm chọn sản phẩm hiển thị đơn giá, đơn vị tinnhs
    $(document).ready(function () {

        $("#MaSP").val(0);
        $("#MaSP").change(function () {
            var MaSP = $("#MaSP").val();
            GetDonGia(MaSP);
            GetLoaiSanPham(MaSP);
            GetDonViTinh(MaSP);
