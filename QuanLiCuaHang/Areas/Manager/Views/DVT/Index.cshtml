<script type="text/javascript">
    // Hàm chọn sản phẩm hiển thị đơn giá, đơn vị tinnhs


    $(document).ready(function () {
        $("#addToTable").click(function (event) {

            var error_free = true;
           

            if ($(".input-validation-error").length != 0) {
                error_free = false;
            }

            if ($("#TenDVT").val() == "") {
                error_free = false;
            }
          

            if (!error_free) {
                event.preventDefault();
                swal({
                    title: "Lỗi !",
                    text: "Thêm mới thất bại!",
                    icon: "error",
                    button: "Đồng ý!",
                });
            }
            else {
                swal({
                    title: "Thành công !",
                    text: "Thêm mới thành công!",
                    icon: "success",
                    button: "Đồng ý!",
                });
            }

        });
    });
</script>
<main>
    <style>
        #nhapphieu {
            text-align: center;
            color: purple;
            font-size: 35px;
            font-weight: bold;
            /*border: 1px solid #ddd;
