@model IEnumerable<QuanLiCuaHang.Areas.Manager.Data.DONVITINH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<style>
    .button {
        border: none;
        color: blue;
        padding: 8px 0px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 2px 0px 2px 900px;
        transition-duration: 0.4s;
        cursor: pointer;
        float: right;
    }

    .button1 {
        background-color: whitesmoke;
        color: black;
        border: 3px solid #4CAF50;
    }
</style>
<div style="background-color:lightyellow">
    <h2 style="text-align:center; color:red;">DANH SÁCH ĐƠN VỊ TÍNH</h2>
    <form action="~/Manager/DVT/Tao">
        <button type="submit" class="button button1">
            Thêm đơn vị tính
        </button>
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenDVT)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDVT)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaDVT }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaDVT }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaDVT })
            </td>
        </tr>
    }

</table>
