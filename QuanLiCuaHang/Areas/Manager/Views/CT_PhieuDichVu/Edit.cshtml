<script type="text/javascript">
    // Hàm chọn sản phẩm hiển thị đơn giá, đơn vị tinnhs
    $(document).ready(function () {
        var MaTinhTrangDV = $("#MaTinhTrangDV").val();

        // Decalre select and name
        var $select = $('#MaTinhTrangDV'),
            name = $select.prop('name'),
            $form = $select.parent('form');

        // Disable MaTinhTrangDV
        if (MaTinhTrangDV == 1) {
            var $hiddenInput = $('<input/>', {
                type: 'hidden',
                name: name,
                value: $select.val()
            });

            //append the hidden field to the form
            $form.append($hiddenInput);
            ////change name and disbale 
            $select.prop({ name: name + "_1", disabled: true });

        }
        $("#MaTinhTrangDV").change(function () {
            alert('yes');
            var MaTinhTrangDV = $("#MaTinhTrangDV").val();
            alert(MaTinhTrangDV);
        });
        });
</script>

