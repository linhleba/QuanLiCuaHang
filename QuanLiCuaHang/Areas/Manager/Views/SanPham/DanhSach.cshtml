@model IEnumerable<QuanLiCuaHang.Areas.Manager.Data.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
@*<link href="~/Content/Site.css" rel="stylesheet" />*@
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<h2>Danh sách các sản phẩm</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSanPham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaMuaVao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaBanRa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongTon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LOAISANPHAM.TenLoaiSP)
        </th>
        <th></th>
    </tr>

    @foreach (var sp in Model)
    {
        sp.GiaBanRa = (sp.GiaMuaVao) * (decimal)((sp.LOAISANPHAM.PhanTramLoiNhuan) / 100);
    }


    @foreach (var item in Model)
    {
        using (Html.BeginForm("Xoa", "SanPham", new { id = item.MaSP }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSanPham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaMuaVao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaBanRa)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LOAISANPHAM.TenLoaiSP)
                </td>
                <td>
                    <a href='@Url.Action("Sua", "SanPham",new { id = item.MaSP })'>


                        <i type="button" class="fa fa-pencil fa-2x"> </i>  |
                    </a>
                    @*  @Html.ActionLink("Sửa", "Sua", new { id = item.MaSP }) |*@
                    @*  @Html.ActionLink("Chi tiết", "ChiTiet", new { id = item.MaSP }) | *@
                    @*<input type="submit" value="Delete" class="fa fa-trash-alt" onclick="return confirm('Are you sure you want to delete ?');" />*@
                  <a href='@Url.Action("Xoa", "SanPham",new { id = item.MaSP })'>
                    <i type="button" class="fa fa-trash fa-2x"> </i>
                </a>
                </td>
            </tr>
        }
    }
</table>




