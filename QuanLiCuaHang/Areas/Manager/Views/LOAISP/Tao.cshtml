@model QuanLiCuaHang.Areas.Manager.Data.LOAISANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

    <h2 style="text-align:center; color:red">Tạo loại sản phẩm</h2>

@using (Html.BeginForm())
    
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Loại sản phẩm</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*<div class="form-group">
                @Html.LabelFor(model => model.MaLoaiSP, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.MaLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaLoaiSP, "", new { @class = "text-danger" })
                </div>
            </div>*@
        @* Them bootstrap validator, them required field *@
        <div class="form-group was-validated">
            @Html.LabelFor(model => model.TenLoaiSP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" required="">
                @Html.EditorFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control", @required = "true", @maxLength="30"}})
                @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
                <div class="valid-feedback"> Tên loại sản phẩm hợp lệ </div>
                <div class="invalid-feedback"> Vui lòng nhập tên loại sản phẩm (không quá 30 kí tự) </div>
            </div>
        </div>

        <div class="form-group was-validated">
            @Html.LabelFor(model => model.PhanTramLoiNhuan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhanTramLoiNhuan, new { htmlAttributes = new { @class = "form-control", @type ="number", @required = "true", @min ="0", @max ="100", @maxLength = "3" } })
                @Html.ValidationMessageFor(model => model.PhanTramLoiNhuan, "", new { @class = "text-danger" })
                <div class="valid-feedback"> Phần trăm lợi nhuận hợp lệ </div>
                <div class="invalid-feedback"> Vui lòng nhập phần trăm lợi nhuận trong khoảng từ 0 đến 100 </div>
            </div>
        </div>

        <div class="form-group was-validated">
            @Html.LabelFor(model => model.MaDVT, "Tên đơn vị tính", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaDVT", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDVT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" onclick="return alert('Tạo mới thành công')"/>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Danhsach")
</div>
